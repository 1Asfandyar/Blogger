<div class='bg-img'></div>
<div class='content text-center mt-5'>
  <h2 class= 'text-white'>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, validate: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mt-3. ", style='max-width:450px ; margin:auto'>
      <%= f.label :email , class: 'text-white'%><br />
      <%= f.email_field :email, autofocus: true,required: true, autocomplete: "email" ,class: 'form-control'%>
    </div>

    <div class="actions mt-3", style='max-width:450px ; margin:auto'>
      <%= f.submit "Send me reset password instructions" , class: 'btn btn-lg btn-dark btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" , class: 'mt-3' %>

</div>
